ErrorDocument 404 /error.html
ErrorDocument 403 /error.html
ErrorDocument 401 /error.html

Redirect /twitter https://twitter.com/_benferch
Redirect /youtube https://www.youtube.com/channel/UCJJGxAWoIqsPmf3ieNa20hA
Redirect /twitch https://www.twitch.tv/eazvip
Redirect /instagram https://www.instagram.com/_realeaz/
Redirect /github https://github.com/benferch
Redirect /tellonym https://tellonym.me/unrealeaz
Redirect /gitlab https://gitlab.com/benferch
Redirect /bitbucket https://bitbucket.org/benferch/

RewriteEngine On
RewriteCond %{SERVER_PORT} !^443$
RewriteRule (.*) https://%{HTTP_HOST}/$1 [R=301]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f

RewriteRule ^(.*)$ $1.html

<filesMatch ".(jpg|jpeg|png|gif|ico|woff|ttf)$">
Header set Cache-Control "max-age=2592000, public"
</filesMatch>

<filesMatch ".(css|js)$">
Header set Cache-Control "max-age=86400, public"
</filesMatch>